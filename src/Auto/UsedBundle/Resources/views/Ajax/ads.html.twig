{% if items|length > 0 %}
    {% for item in items %}
    <div class="col-sm-4 col-xs-6 col-md-3" style="min-height: 166px;">
        <span class="label label-danger price"><strong>{{ (item.price * cource)|price(1) }}</strong></span>
        <a href="" title="Просмотреть объявление о продаже {{ item.brand }} {{ item.model }}">
            <img src="/{{ item.images|photo(0, 'medium') }}"  class="img-responsive" alt="Фото {{ item.brand }} {{ item.model }}"/>
        </a>
        <a href="#" title="Просмотреть объявление о продаже {{ item.brand }} {{ item.model }}"><strong>{{ item.brand }} {{ item.model }}</strong></a><br/>
        <span class="detail">
            {{ item.year }} г.в.
            {% if(item.engine) %}
            , {{ ('car.option.engine.' ~ item.engine)|trans }}
                {% if(item.volume) %}
                 {{ item.volume }} л.
                {% endif %}
            {% endif %}
        </span>
    </div>
    {% endfor %}
{% endif %}